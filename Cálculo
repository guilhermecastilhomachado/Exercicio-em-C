#include <stdio.h>

int main()
{
  int peca1,peca2,numero1,numero2;
  double valor1,valor2,preco1,preco2,precoFinal;
  scanf("%d %d %lf",&peca1,&numero1,&valor1);
  scanf("%d %d %lf",&peca2,&numero2,&valor2);

  preco1 = numero1 * valor1;
  preco2 = numero2 * valor2;
  precoFinal = preco1 + preco2;
 
  printf("VALOR A PAGAR: R$ %.2lf\n",precoFinal);
  return 0;
}
